<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="me.wangqiang.gamebox.m.gobang.bean.Piece"/>

        <variable
            name="viewModel"
            type="me.wangqiang.gamebox.m.gobang.viewmodel.GoBangMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <!-- 顶部工具栏区域 -->
        <LinearLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/c_ui_dimen_16"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 退出按钮 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/c_ui_dimen_40"
                android:layout_height="@dimen/c_ui_dimen_40"
                android:textSize="@dimen/c_ui_font_size_16"
                app:srcCompat="@drawable/ic_exit"/>

            <!-- 标题文本 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gobang_app_name"
                android:textStyle="bold"
                android:textSize="@dimen/c_ui_font_size_24"
                android:textColor="@color/main_color"
                android:gravity="center"/>

            <!-- 重置按钮 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_restart"
                android:layout_width="@dimen/c_ui_dimen_40"
                android:layout_height="@dimen/c_ui_dimen_40"
                android:textSize="@dimen/c_ui_font_size_16"
                app:srcCompat="@drawable/ic_restart"/>
        </LinearLayout>

        <me.wangqiang.gamebox.m.gobang.view.GameView
            android:id="@+id/game_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <!-- 底部工具栏 -->
        <LinearLayout
            android:id="@+id/bottomToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="@dimen/c_ui_dimen_16"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/game_board">

            <!-- ai得分 -->
            <TextView
                android:id="@+id/tv_black_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/ai_piece(viewModel.scoreLiveData.first)}"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/c_ui_font_size_16"
                android:layout_marginEnd="16dp"/>

            <!-- player得分 -->
            <TextView
                android:id="@+id/tv_white_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/player_piece(viewModel.scoreLiveData.second)}"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:textSize="@dimen/c_ui_font_size_16"
                android:layout_marginEnd="16dp"/>

            <!-- 平局 -->
            <TextView
                android:id="@+id/tv_draw_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/score_draw(viewModel.scoreLiveData.third)}"
                android:textColor="@color/text_color1"
                android:textStyle="bold"
                android:textSize="@dimen/c_ui_font_size_16"
                android:layout_marginEnd="16dp"/>

            <!-- 回合提示 -->
            <TextView
                android:id="@+id/tv_turn_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.mGameMove.playerType == Piece.WHITE ? @string/black_turn : @string/white_turn}"
                android:textSize="@dimen/c_ui_font_size_16"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"/>

            <!-- 悔棋按钮 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_undo"
                android:layout_width="@dimen/c_ui_dimen_40"
                android:layout_height="@dimen/c_ui_dimen_40"
                app:srcCompat="@drawable/ic_undo_selector"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>