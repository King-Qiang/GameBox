<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="me.wangqiang.gamebox.m.tzfe.viewmodel.TZFEMainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <!-- 顶部工具栏区域 -->
        <LinearLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/c_ui_dimen_16"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 退出按钮 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/c_ui_dimen_40"
                android:layout_height="@dimen/c_ui_dimen_40"
                android:textSize="@dimen/c_ui_font_size_16"
                app:srcCompat="@drawable/ic_exit"/>

            <!-- 标题文本 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tzfe_app_name"
                android:textStyle="bold"
                android:textSize="@dimen/c_ui_font_size_24"
                android:textColor="@color/main_color"
                android:gravity="center"/>

            <!-- 重置按钮 -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_restart"
                android:layout_width="@dimen/c_ui_dimen_40"
                android:layout_height="@dimen/c_ui_dimen_40"
                android:textSize="@dimen/c_ui_font_size_16"
                app:srcCompat="@drawable/ic_restart"/>
        </LinearLayout>

        <!-- 当前得分 -->
        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Score: " + String.valueOf(viewModel.currentScore)}'
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/c_ui_dimen_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/high_score_text_view"
            app:layout_constraintTop_toBottomOf="@id/topToolbar" />

        <!-- 最高得分 -->
        <TextView
            android:id="@+id/high_score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Highest Score: " + String.valueOf(viewModel.highestScore)}'
            android:textSize="24sp"
            android:textColor="#555555"
            android:layout_marginTop="@dimen/c_ui_dimen_16"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/score_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topToolbar" />

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/c_ui_dimen_32"
            android:rowCount="4"
            android:columnCount="4"
            android:background="@drawable/game_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="1:1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>